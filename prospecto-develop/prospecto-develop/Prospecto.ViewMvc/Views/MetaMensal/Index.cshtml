@model List<Prospecto.Models.MetaMensal>

<h2>Metas Mensais</h2>
<p>
    <a class="btn btn-primary" href="/MetaMensal/Create">Nova Meta</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mês</th>
            <th>Meta (R$)</th>
            <th>Loja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MesAno.ToString("MM/yyyy")</td>
                <td>@item.ValorMeta.ToString("C")</td>
                <td>@item.Loja</td>
            </tr>
        }
    </tbody>
</table>
