@model List<Prospecto.Models.DTO.NotificationDTO>

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
        <i class="fa fa-bell"></i>
        @if (Model != null && Model.Any())
        {
            <span class="badge" style="background-color: red; position: absolute; top: 8px; right: 2px;">
                @Model.Count
            </span>
        }
    </a>
    <ul class="dropdown-menu" style="width: 300px; max-height: 400px; overflow-y: auto; padding: 10px;">
        <li class="dropdown-header" style="font-weight: bold; font-size: 16px;">
            <i class="fa fa-bell"></i> Notificações Recentes
        </li>
        <li role="separator" class="divider"></li>

        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <li style="padding: 8px; border-bottom: 1px solid #eaeaea;">
                    <strong>Retorno Agendado</strong><br />
                    <span style="font-size: 12px;">
                        Cliente: @item.Message<br />
                        <i class="fa fa-calendar"></i> @item.NotifyDate.ToString("dd/MM/yyyy HH:mm")
                    </span>
                </li>
            }
        }
        else
        {
            <li class="text-center text-muted" style="padding: 10px;">
                <i class="fa fa-info-circle"></i> Nenhuma notificação pendente.
            </li>
        }
    </ul>
</li>
