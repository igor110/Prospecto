@using Prospecto.Models.Enums;
@model IEnumerable<Prospecto.Models.ViewModel.UserViewModel>

<div class="adv-table">
    <table id="tableUser" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Código</th>
                <th>Descrição</th>
                <th>Email</th>
                <th>Empresa</th>
                <th>Filial</th>
                <th>Tipo</th>
                <th>Ativo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr style="cursor: pointer">
                <td id="@item.Id" style="width: 10%">  @item.Id.ToString("0000") </td>
                <td style="width: 25%"> @item.Name </td>
                <td style="width: 20%"> @item.Email </td>
                <td style="width: 15%"> @item.Company?.Description </td>
                <td style="width: 15%"> @item.Branch?.Description </td>
                <td style="width: 15%"> @(UserType.FromUserType(item.TypeUser))</td>
                <td style="width: 10%"> @(item.IsActive ? "Ativo": "Inativo")</td>
                <td style="width: 5%">
                    <div class="text-center">
                        <a class="fa fa-pencil" title="Editar" data-id="@item.Id" style="font-size: 16px; color: #75798B" href="@Url.Action("Index", "User", new { Id = item.Id })"></a>
                        @*<a class="fa fa-remove" title="Excluir" data-id="@item.Id" style="font-size: 16px; color: #75798B" onclick="Excluir($(this))"></a>*@
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


